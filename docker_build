#!/bin/bash

 # Exit on first failing command.
 set -e
 # Echo commands to console.
 set -x

IMAGE_NAME="mtlynch/protractor"
CONTAINER_NAME="ketohub-container"

docker version

docker run \
  --tty \
  --detach \
  --volume "${PWD}:/app" \
  --volume "node_modules:/app/node_modules" \
  --name "$CONTAINER_NAME" \
  "$IMAGE_NAME"

docker exec "$CONTAINER_NAME" npm install

# Workaround for weird behavior in node-sass.
docker exec "$CONTAINER_NAME" npm rebuild node-sass

docker exec "$CONTAINER_NAME" bash ./build